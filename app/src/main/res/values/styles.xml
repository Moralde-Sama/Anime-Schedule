<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0D3149</item>
        <item name="colorPrimaryDark">#0D3149</item>
        <item name="colorAccent">#24B8EF</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0D3149</item>
        <item name="colorPrimaryDark">#0D3149</item>
        <item name="colorAccent">#24B8EF</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- if using android.widget.PopupMenu -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/firstcolor</item>
    </style>

    <style name="MyEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#24B8EF</item>
        <item name="colorControlHighlight">#000000</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        //the rest of your codes...
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/adamina</item>
    </style>
    
    <style name="button_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/thirdcolor</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Popuptheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/textcolor</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="lskdjf" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@color/thirdcolor</item>
    </style>

    <style name="AppTheme.FilterPopup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
         <!--active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/thirdcolor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FFFFFF
        </item>
    </style>

</resources>
